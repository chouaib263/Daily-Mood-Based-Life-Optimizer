{
  "manifest_version": 3,
  "name": "MoodFlow",
  "version": "1.0",
  "description": "AI-powered mood enhancer & goal booster",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
